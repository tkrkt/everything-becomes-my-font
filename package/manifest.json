{
  "manifest_version": 2,
  "name": "Everything Becomes My Font",
  "version": "1.0.0",
  "description": "insert *{font-family: ... !important}",
  "author": "tkrkt",
  "browser_action": {
  },
  "background": {
    "scripts": [
      "index.js"
    ],
    "persistent": false
  },
  "icons": {
    "128": "icon128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}